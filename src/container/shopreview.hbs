{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>

    <section class="ps-0">
        {{#with formBlock}}
        <div class="row">
            {{!-- Ліва секція колонки відгуків про товар--}}
            <div class="col-8">
                <div class="mb-3">
                    <h2>{{header}}</h2>
                    <p>{{rating.title}}: {{rating.value}}</p>
                </div>
                <div>
                    {{#with actionBlock}}
                    <div class="mt-3 mb-5">
                        <ul class="nav nav-tabs">
                            {{#each tabs}}
                            <li class="nav-item">
                                <a class="nav-link {{#if isActive}} active {{/if}}" aria-current="page"
                                    href="#">{{text}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <hr>
                    <div class=" card mt-5 mb-5 p-3">
                        {{#with report}}
                        <p>{{title}}</p>
                        <div>
                            <a class="btn btn-secondary" href="{{button.link}}">{{button.text}}</a>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                    <hr>
                    <div class="mt-5 mb-5">
                        {{#with feedbackBlock}}
                        <div class="mb-5">
                            <h3>{{title}}</h3>
                        </div>

                        <div class="mt-3 mb-3">
                            {{#each buttons}}
                            {{#if isWarning}}<a class="btn btn-warning me-3" href="{{link}}">{{text}}</a>{{/if}}
                            {{#if isSuccess}}<a class="btn btn-success me-3" href="{{link}}">{{text}}</a>{{/if}}
                            {{#if isDanger}}<a class="btn btn-danger me-3" href="{{link}}">{{text}}</a>{{/if}}
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>

            {{!-- Права секція колонки відгуків про товар --}}
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card mb-3">
                    <div class="card-body">
                        <img class="rounded mb-3" src="{{photo}}" alt="{{name}}">
                        <h4>{{name}}</h4>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h4>{{price}}</h4>
                        {{#if inMarket}}<p>Є в наявності</p>{{/if}}
                        <div>
                            {{#each buttons}}
                            <div>
                                {{#if isPrimary}}<a class="btn btn-primary mb-2" href="{{link}}">{{text}}</a>{{/if}}
                            </div>
                            <div>
                                {{#if isSecondary}}<a class="btn btn-secondary" href="{{link}}">{{text}}</a>{{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{!-- інформація про продавця --}}
                <div class="card mb-3">
                    <div class="card-body">
                        <p>{{seller.title}}: <b>{{seller.value}}</b></p>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </section>
    <hr>
    {{!-- Секція відгуків --}}
    {{> reviewItem}}
</main>