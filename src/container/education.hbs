{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        {{#with main}}
        <section>
            {{> title data='Education' big=true}}
            <ul>
                {{#each educations}}
                <li>
                    {{name }}
                    ---
                    {{year}}
                    {{#unless isEnd}}
                    (in progress...)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data='My Sertificates' big=false}}
            <ul>
                {{#each certificate}}
                <Li>
                    {{name}}
                    ({{id}})
                </Li>
                {{/each}}
            </ul>
        </section>
        {{/with}}
    </main>
</div>

