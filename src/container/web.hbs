{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <section>
        {{#with web}}
        <div>
            <h2>Languages</h2>
            <hr>
            <dl> {{#each languages}}
                <b>
                    <dt>{{name}}, version: {{version}}</dt>
                </b><br>
                <dd>{{description}}</dd><br>


                <div>
                    <dl>
                        {{#each elements}}
                        <p><b>Elements</p></b>
                        <dt><b>{{name}}</b></dt><br>
                        <dd>{{description}}</dd><br>

                        <dl>
                            <p><b>Attributes</p></b>
                            {{#each attributes}}
                            <dt><b>{{name}}</b></dt>
                            <dd>{{description}}</dd>
                            {{/each}}
                        </dl>

                        {{/each}}
                    </dl>
                </div>
                <hr>
                <div>
                    <dl>{{#each attributes}}
                        <p><b>Attributes</p></b>
                        <dt><b>{{name}}</b></dt><br>
                        <dd>{{description}}</dd><br>


                        <dl>
                            <p><b>Values</p></b>

                            {{#each values}}
                            <dt><b>{{value}}</b></dt>
                            <dd>{{description}}</dd>
                            {{/each}}
                        </dl>
                        <hr>

                        {{/each}}
                    </dl>
                </div>

                <div>
                    <dl>{{#each functions}}
                        <p><b>Functions</p></b>
                        <dt><b>{{name}}</b></dt><br>
                        <dd>{{description}}</dd><br>

                        <dl>
                            <p><b>Parameters</p></b>
                            {{#each parameters}}
                            <dt><b>Name:{{name}}</b></dt>
                            <dt><b>type: {{type}}</b></dt>
                            <dd>{{description}}</dd>
                            {{/each}}
                        </dl>

                        <hr>
                        {{/each}}
                    </dl>
                </div>
                {{/each}}
            </dl>

        </div>

        {{/with}}
    </section>


</div>

