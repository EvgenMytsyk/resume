{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <section>
        <div>
            <h1>{{name}}</h1>
            <p>{{description}}</p>
            <p>Price: ${{price}}</p>
            <P>Category: {{category}}</P>
        </div>

        <div>
            {{#with features}}
            <h2>Fearutes:</h2>

            <ul>
                {{#with processor}}
                <li>Processor: {{brand}},
                    model: {{model}},
                    speed: {{speed}},
                    cores: {{cores}},
                    cache: {{cache}}</li>
                {{/with}}
                <li>Memory: {{memory.type}} {{memory.size}} {{memory.speed}}</li>
                <li>Storage: {{storage.type}} {{storage.size}}</li>
                <li>Display: {{display.size}}
                    {{display.resolution}}
                    {{display.technology}}
                    {{display.color_space}}
                    {{display.brightness}}
                    {{display.refresh_rate}}
                </li>
                <li>Graphics: {{graphics.brand}} {{graphics.model}} {{graphics.memory}} </li>
                <li>Ports:
                    <ul>
                        {{#each ports}}
                        <li>
                            {{type}} ({{count}})
                            {{#if features}}
                            {{#each features}}
                            <ul>
                                <li>{{this}}</li>
                            </ul>
                            {{/each}}
                            {{/if}}
                        </li>
                        {{/each}}
                    </ul>
                </li>
                <li>Weight: {{weight}}</li>
                <li>Dimensions:
                    {{dimensions.height}}
                    {{dimensions.width}}
                    {{dimensions.depth}}
                </li>
                <li>Operating system: {{operating_system}}</li>
                <li>Accessories:
                    <ul>
                        {{#each accessories}}
                        <li>{{name}} <br>
                            Price: ${{price}}

                        </li>
                        {{/each}}
                    </ul>
                </li>
            </ul>
            {{/with}}
        </div>
    </section>
</div>

