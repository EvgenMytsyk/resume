{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    {{!-- секція заголовка --}}
    <section class="ps-0">
        <div class="mb-5 ms-2 me-2">
            {{#with header}}
            <h2>{{title}}</h2>
            <div>
                {{#with button}}
                <a class="btn btn-outline-secondary" href="href">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
        </div>
        <hr>
    </section>

    {{> cardGoodsItem}}

    <section>
        {{#with total}}
        <div>
            <h3>{{title}}</h3>

            <h2>{{amount}}</h2>

            <p class="text-muted">{{delivery}}</p>
        </div>

        <div class="mb-5">
            {{#each buttons}}
            <div class="mt-3 mb-1">
                {{#if isSuccess}}
                <a class="btn btn-success" href="link">
                    {{text}}
                </a>
                {{/if}}
            </div>
            <div class="mt-3 mb-1">
                {{#if isOutline}}
                <a class="btn btn-outline-success" href="link">
                    {{text}}
                </a>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    
</main>
