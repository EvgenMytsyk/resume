{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{#with summary}}
                {{> title data=title big=true}}
                {{/with}}
            </div>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (till now)
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link text=company.name blank=true href=company.url noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            <strong> Projects</strong> ({{prodjectAmount}})
                        </div>

                        <br>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link href=url text=name blank=true noLine=true}}</div>

                                <br>

                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <br>

                                <em>Project stacks ({{stacksAmount}})</em>

                                <br>

                                <div>
                                    <ul>
                                        {{#each stacks}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <br>

                                <em>Project awards</em>

                                <br>

                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

