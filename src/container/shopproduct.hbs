{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{!-- Секція картки з ціною та список справа --}}
    <div class="row mt-5">
        {{#with productData}}
        <div class="col-6 ps-0">
            <div class="card">

                <img class="card-img-top" src="{{img}}" alt="Card image cap">
                <div class="card-body">
                    {{#with info}}
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{about}}</p>
                    <b>
                        <h3>{{price}}</h3>
                    </b>
                    {{#each category}}
                    {{#if isHot}}<span class="badge text-bg-warning rounded-pill">{{name}}</span>{{/if}}
                    {{#if isNew}}<span class="badge text-bg-primary rounded-pill">{{name}}</span>{{/if}}
                    {{#if isBonus}}<span class="badge text-bg-info rounded-pill">{{name}}</span>{{/if}}
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="col-1"></div>
        <div class="col-5 pe-o">
            <table class="table">
                <thead>
                    {{#with item}}
                    <tr>
                        {{#each head}}
                        <th scope="col-1">{{this}}</th>
                        {{/each}}
                    </tr>

                </thead>
                <tbody>
                    {{#each body}}
                    <tr>

                        {{#each this}}
                        <td>{{this}}</td>
                        {{/each}}

                    </tr>
                    {{/each}}
                </tbody>
                {{/with}}
            </table>

            <div class="card mt-3">
                <ul class="list-group">
                    {{#with param}}
                    <li class="list-group-item text-bg-light">{{title}}</li>
                    {{#each list}}
                    <li class="list-group-item">{{this}}</li>
                    {{/each}}
                    {{/with}}
                </ul>
            </div>

            <div class="alert alert-danger mt-3" role="alert">
                {{#with alert}}
                {{#if isError}}{{text}}{{/if}}
                {{/with}}
            </div>
        </div>

        <div class="card mt-4 mb-5">
            <div class="card-body">
                {{#each actionList}}
                {{#if isWarning}}<button class="btn btn-warning">{{name}}</button>{{/if}}
                {{#if isError}}<button class="btn btn-outline-danger">{{name}}</button>{{/if}}
                {{#if isSuccess}}<button class="btn btn-success">{{name}}</button>{{/if}}
                {{#if isGood}}<button class="btn btn-outline-success">{{name}}</button>{{/if}}
                {{/each}}
            </div>
        </div>
        {{/with}}

        <div class="mt-5">
            <hr>
        </div>
    </div>
</main>
