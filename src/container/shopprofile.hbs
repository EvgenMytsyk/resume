{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    <section class="ps-0">
        <div class="mb-5 ms-2 me-2">
            <h2>{{header}}</h2>
        </div>

        {{!-- Секція вкладок --}}
        <div class="row">
            {{#with purchase}}
            <ul class="nav nav-tabs">
                {{#each tabs}}
                <div class="ms-3">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">{{this}}</a>
                    </li>
                </div>
                {{/each}}
            </ul>
            {{!-- секція дії та кнопок --}}
            <div class="row">
                {{#with actionBlock}}
                <div class="col-4 mt-3 mb-3">
                    <label class="form-label"></label>
                    <input type="text" class="form-control" placeholder="{{input.placeholder}}">
                </div>
                <div class="col-8 mt-3 mb-3 pt-4">
                    {{#each buttons}}
                    {{#if isSuccess}}<a href="{{href}}" class="btn btn-success">{{text}}</a>{{/if}}
                    {{#if isOutline}}<a href="{{href}}" class="btn btn-outline-success">{{text}}</a>{{/if}}
                    {{#if isDanger}}<a href="{{href}}" class="btn btn-danger">{{text}}</a>{{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
            {{/with}}
        </div>
        <hr>
    </section>
    {{!-- секці карточки з зображенням --}}

    {{> purchaseItem}}

    {{!-- Секція фнформації про користувача --}}
    <section>
        {{#with userInfo}}
        <div class="mb-5 ms-2 me-2">
            <h3>{{title}}</h3>
        </div>

        <div class="card">
            {{#with profileData}}
            <div class="mb-3 mt-4 ms-2 me-2">
                <h3>{{title}}</h3>
            </div>
            <div class="card ms-1 me-3 mb-3">
                <div class="row">
                    {{#with fullName}}
                    <div class="col-4 pt-2">
                        <p class="ms-2">{{surname.title}}</p>
                        <h5 class="ms-2">{{surname.value}}</h5>
                    </div>

                    <div class="col-4 pt-2">
                        <p>{{name.title}}</p>
                        <h5>{{name.value}}</h5>
                    </div>

                    <div class="col-4 pt-2">
                        <p>{{middleName.title}}</p>
                        <h5>{{middleName.value}}</h5>
                    </div>
                    {{/with}}
                </div>
            </div>

            {{!-- секція інша інформація --}}
            <div class="card ms-1 me-3 mb-3">
                <div class="row">
                    {{#with otherInfo}}
                    <div class="col-4 pt-2">
                        <p class="ms-2">{{birthday.title}}</p>
                        <h5 class="ms-2">{{birthday.value}}</h5>
                    </div>

                    <div class="col-4 pt-2">
                        <p>{{sex.title}}</p>
                        <h5>{{sex.value}}</h5>
                    </div>

                    <div class="col-4 pt-2">
                        <p>{{language.title}}</p>
                        <h5>{{language.value}}</h5>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
            {{!-- секція кнопок --}}
            <div class="card ms-1 me-3 mb-3">
                <div class="row">
                    {{#each buttons}}
                    <div class="col-4">
                        {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary ms-2 mt-2 mb-2">{{text}}</a>{{/if}}
                        {{#if isSecondary}}<a href="{{link}}"
                            class="btn btn-outline-secondary mt-2 mb-2">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger mt-2 mb-2">{{text}}</a>{{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    {{!-- Секція ОТРИМУВАЧІ --}}
    <section>
        {{#with userInfo}}
        <div class="card">
            {{#with recipients}}
            <div class="mb-3 mt-4 ms-2 me-2">
                <h3>{{title}}</h3>
            </div>

            <div class="row">
                {{#each users}}
                <div class="col-4">
                    <div class="card ms-1 me-3 mb-3 pt-2">
                        <h5 class="ms-2">{{name}}</h5>
                        <p class="ms-2">{{phone}}</p>
                    </div>
                    <div>
                        {{#with button}}
                        <a href="{{link}}" class="btn btn-primary ms-2 mt-2 mb-2">{{text}}</a>
                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </section>

    {{!-- Секція КОНТАКТИ --}}
    <section>
        {{#with userInfo}}
        <div class="card">
            {{#with contacts}}
            <div class="mb-3 mt-4 ms-2 me-2">
                <h3>{{title}}</h3>
            </div>

            <div class="row">
                {{#each contactData}}
                <div class="col-4">
                    <div class="card ms-1 me-3 mb-3 pt-2">
                        <p class="ms-2">{{title}}</p>
                        <h5 class="ms-2">{{value}}</h5>
                    </div>
                    <div>
                        {{#with button}}
                        {{#if isPrimary}}<a href="{{link}}" class="btn btn-primary ms-2 mt-2 mb-2">{{text}}</a>{{/if}}
                        {{#if isSecondary}}<a href="{{link}}"
                            class="btn btn-outline-secondary ms-2 mt-2 mb-2">{{text}}</a>{{/if}}
                        {{#if isDanger}}<a href="{{link}}"
                            class="btn btn-outline-danger ms-2 mt-2 mb-2">{{text}}</a>{{/if}}

                        {{/with}}
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        {{/with}}
        <hr>
    </section>
</main>