<section>
    {{#each goodsBlock}}
    <div class="card mt-3 mb-5">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <img src="{{image}}" alt="{{name}}">
                </div>

                <div class="col-4">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>

                <div class="col-2">
                    <p>{{price.title}}</p>
                    <p>
                    <h3>{{price.value}}</h3>
                    </p>
                </div>

                <div class="col-2 text-center">
                    <p class="mt-5">{{amount}}</p>
                </div>

                <div class="col-2">
                    {{#each buttons}}
                    <div class="mt-3 mb-1">
                        {{#if isPrimary}}
                        <button class="btn btn-primary">
                            {{text}}
                        </button>
                        {{/if}}
                    </div>
                    <div class="mt-3 mb-1">
                        {{#if isDanger}}
                        <button class="btn btn-outline-danger">
                            {{text}}
                        </button>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <hr>
</section>